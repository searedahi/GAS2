@model Geeky.Swimteam.Models.Practice

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>Practice</h4>
        <hr />
        <div asp-validation-summary="ValidationSummary.ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Begins" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Begins" class="form-control" />
                <span asp-validation-for="Begins" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Ends" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <div class="input-group date">
                    <input asp-for="Ends" class="geekypick form-control" value="12-02-2012" type="text">
                    <div class="input-group-addon">
                        <span class="glyphicon glyphicon-th"></span>
                    </div>
                    <span asp-validation-for="Ends" class="text-danger" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Description" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <label asp-for="MaxParticipants" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="MaxParticipants" class="form-control" />
                <span asp-validation-for="MaxParticipants" class="text-danger" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
            </div>
        </div>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $('.geekypick').datepicker();
        });

    </script>
}
