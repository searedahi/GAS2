@using System.Collections.Generic
@using System.Threading.Tasks
@model System.Collections.Generic.IEnumerable<Geeky.Swimteam.ViewModels.Practice.PracticeViewModel>

@{
    ViewData["Title"] = "Practices";
}



<h2>Practice Schedule</h2>

<p>

    <a asp-action="Create" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Create</a>
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PracticeDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Begins)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Ends)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MaxParticipants)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PracticeDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Begins)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ends)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxParticipants)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
    }
</table>


