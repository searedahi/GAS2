@model IEnumerable<GeekyUser>

@{
    ViewData["Title"] = "Users";
}

<h2>
    @ViewData["Title"]
</h2>
<p class="text-success">@ViewData["StatusMessage"]</p>
<div>
    <a asp-action="Create" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Create</a>
    <span>
        <em>
            or pick a user.
        </em>
    </span>
</div>

<br />
@foreach (var role in Model)
{
    <a asp-action="Details" asp-route-id="@role.Id" class="btn btn-info" title="Manage the @role.Email role?"> @role.Email</a>
}
